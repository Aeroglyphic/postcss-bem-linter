{
  "name": "postcss-bem-linter",
  "version": "0.2.0",
  "description": "A BEM linter for postcss",
  "files": [
    "index.js",
    "lib"
  ],
  "dependencies": {
    "postcss": "^4.1.0"
  },
  "devDependencies": {
    "jscs": "1.12.0",
    "jscs-jsdoc": "0.4.6",
    "mocha": "2.2.3"
  },
  "scripts": {
    "checkstyle": "jscs *.js **/*.js --config=jscs.config.js",
    "start": "mocha --reporter spec --watch",
    "test": "npm run checkstyle && mocha --no-colors"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/necolas/postcss-bem-linter.git"
  },
  "keywords": [
    "css",
    "postcss",
    "bem",
    "lint",
    "test"
  ]
}
